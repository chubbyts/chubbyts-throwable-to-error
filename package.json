{
  "name": "@chubbyts/chubbyts-throwable-to-error",
  "version": "1.0.0",
  "description": "It converts any throwable into an Error.",
  "keywords": [
    "chubbyts",
    "throwable",
    "error"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-throwable-to-error",
  "scripts": {
    "cs-fix": "prettier --write src tests",
    "cs": "prettier --check src tests",
    "test": "jest",
    "infection": "stryker run",
    "build": "tsc",
    "prepare": "rm -Rf dist && npm run build && npm run cs && npm run test"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "dependencies": {},
  "devDependencies": {
    "@stryker-mutator/core": "^6.0.2",
    "@stryker-mutator/jest-runner": "^6.0.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^14",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
