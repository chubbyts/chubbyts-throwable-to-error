{
  "name": "@chubbyts/chubbyts-throwable-to-error",
  "type": "module",
  "version": "2.0.0",
  "description": "It converts any throwable into an Error.",
  "keywords": [
    "chubbyts",
    "throwable",
    "error"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-throwable-to-error",
  "scripts": {
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "build:esm": "tsc --module ESNext --outDir dist/esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "cs-fix": "prettier --write src tests",
    "cs": "prettier --check src tests",
    "infection": "stryker run",
    "lint-fix": "eslint src tests eslint.config.mjs --fix",
    "lint": "eslint src tests",
    "prepare": "npm run build",
    "test": "vitest"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@chubbyts/chubbyts-eslint": "^3.0.0",
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/vitest-runner": "^8.7.1",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
